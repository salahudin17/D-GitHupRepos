@model Department
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.Name Department /></h1>
<form asp-action="Edit" asp-controller="Department" method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label class="col-form-label" asp-for="Code"></label>
        <input class="form-control" asp-for="Code" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div>

        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label class="col-form-label" asp-for="CreatedOn"></label>
        <input class="form-control" asp-for="CreatedOn" />
    </div>
    <div>
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-light">BackToList</a>

    </div>
</form>
@section ValidationScriptsSection
 {
    <partial name="_ValidationScriptsPartial" />
}


