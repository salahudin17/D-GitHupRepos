@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "All Employees";
    //     string ViewDataMessage = ViewData["Message"] as string;
    //     string ViewDataBag = ViewBag.Message;
}
@if(TempData["Message"] is not null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>  
}
@*<div class="alert alert-success">
    @ViewData["Message"]
</div>*@
@*<div class="alert alert-success">
    @ViewData["Message"]
</div>*@

<div class="alert alert-success">
    @ViewBag.Message
</div>
<a asp-action="Create" class="btn btn-success">Create New Employee</a>
@if (Model.Count() > 0)

{
    <h1>All Employees</h1>
    <br/>
    <div class="m-2">
    <form class="row offset-2" asp-action="Index" >
        <div class="col-8">
<input class="form-control" type="text" name="SearchValue"/ placeholder="Employees,s Name">
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-info" value="Search"/> 
        </div>
    </form>
    </div>
    <table class="table table-striped table-hover mt-3">
        <thead>
            <td>@Html.DisplayNameFor(D => D.Name)</td>
            <td>@Html.DisplayNameFor(D => D.Age)</td>
            <td>@Html.DisplayNameFor(D => D.Address)</td>  
            <td>@Html.DisplayNameFor(D => D.Email)</td>
            <td>@Html.DisplayNameFor(D => D.Salary)</td>
            <td>@Html.DisplayNameFor(D => D.Department)</td>
            <td>@Html.DisplayNameFor(D => D.IsActive)</td>
            <td>@Html.DisplayNameFor(D => D.HireDate)</td>
            <td>@Html.DisplayNameFor(D => D.DateOfCreation)</td>
            <td>@Html.DisplayNameFor(D => D.Phone)</td>
            <td> Details</td>
            <td>Update</td>
            <td>Delete</td>

        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(D => employee.Name)</td>
                    <td>@Html.DisplayFor(D => employee.Age)</td>
                    <td>@Html.DisplayFor(D => employee.Address)</td>
                    <td>@Html.DisplayFor(D => employee.Email)</td>
                    <td>@Html.DisplayFor(D => employee.Salary)</td>
                    <td>@Html.DisplayFor(D => employee.Department.Name)</td>
                    <td>@if(employee.IsActive==true)
                        {
                            <i class="fa-solid fa-circle" style="color:green"></i>
                        }
                        else
                        {
                            <i class="fa-solid fa-circle " style="color:red"></i>
                        }
                    </td>
                    <td>@Html.DisplayFor(D => employee.HireDate)</td>
                    <td>@Html.DisplayFor(D => employee.DateOfCreation)</td>
                    <td>@Html.DisplayFor(D => employee.Phone)</td>
                    <partial name="_ButtonPartialView" model="employee.Id" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">

        <h3>There is No Employees </h3>
    </div>

}

