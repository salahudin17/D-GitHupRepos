@model EmployeeViewModel
@{
    var departments = ViewBag.Department != null
        ? new SelectList(ViewBag.Department, "Id", "Name")
        : new SelectList(Enumerable.Empty<SelectListItem>());
}

<div>
    <label class="col-form-label" asp-for="Name"></label>
    <input class="form-control" asp-for="Name" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div>

    <label class="col-form-label" asp-for="Age"></label>
    <input class="form-control" asp-for="Age" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div>

    <label class="col-form-label" asp-for="Address"></label>
    <input class="form-control" asp-for="Address" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div>

    <label class="col-form-label" asp-for="Email"></label>
    <input class="form-control" asp-for="Email" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div>

    <label class="col-form-label" asp-for="Salary"></label>
    <input class="form-control" asp-for="Salary" />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>

<div>
    <label class="col-form-label" asp-for="IsActive"></label>
    <input class="form-control" asp-for="IsActive" />
</div>

<div>
    <label class="col-form-label" asp-for="HireDate"></label>
    <input class="form-control" asp-for="HireDate" />
    <span asp-validation-for="HireDate" class="text-danger"></span>
</div>

<div>
    <label class="col-form-label" asp-for="DateOfCreation"></label>
    <input class="form-control" asp-for="DateOfCreation" />
    <span asp-validation-for="DateOfCreation" class="text-danger"></span>
</div>

<div>
    <label class="col-form-label" asp-for="Phone"></label>
    <input class="form-control" asp-for="Phone" />
    <span asp-validation-for="Phone" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="DepartmentId" class="control-label"></label>
    <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.Department">
        <option value="">Select Department</option>
    </select>
    <span asp-validation-for="DepartmentId" class="text-danger"></span>
</div>
 